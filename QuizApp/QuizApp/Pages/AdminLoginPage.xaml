<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="QuizApp.AdminLoginPage">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" Padding="30">
		  	<Label HorizontalOptions="StartAndExpand" Text="Admin Login" />

			<Label HorizontalOptions="StartAndExpand" Text="User name:" />
			<Entry x:Name="txtUserName" Placeholder="UserName" TextChanged="OnUserNameTextChanged" />

			<Label HorizontalOptions="StartAndExpand" Text="Password:" />
			<Entry x:Name="txtPwd" Placeholder="Password" IsPassword="true" TextChanged="OnPwdTextChanged" />

			<Label x:Name="lblMessage" HorizontalTextAlignment="Center" Text="" HorizontalOptions="StartAndExpand" />

		  	<Button x:Name="btnCancel" HorizontalOptions="End" Text="Annulla" Clicked="OnCancelClicked" />
		  	<Button x:Name="btnLogin" HorizontalOptions="End" Text="Login" Clicked="OnLoginClicked" />


		</StackLayout>
	</ContentPage.Content>
</ContentPage>
